{
  "name": "senyokwame",
  "version": "1.0.0",
  "description": "Data purchase platform with client and server components",
  "private": true,
  "main": "index.js",
  "scripts": {
    "install-client": "cd Client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build-client": "cd Client && npm run build",
    "build-server": "cd server && npm run build",
    "build": "npm run install-server",
    "start": "node index.js",
    "start-alt": "node deploy.js",
    "start-server": "cd server && node index.js",
    "dev": "concurrently \"cd server && npm start\" \"cd Client && npm run dev\"",
    "dev-server": "cd server && npm start",
    "dev-client": "cd Client && npm run dev"
  },
  "workspaces": [
    "Client",
    "server"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danaasamuel2023/unlimitedData1.git"
  },
  "keywords": [
    "data-purchase",
    "mobile-data",
    "nextjs",
    "nodejs",
    "mongodb",
    "paystack"
  ],
